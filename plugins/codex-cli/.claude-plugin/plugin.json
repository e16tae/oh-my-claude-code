{
  "$schema": "../../../schemas/plugin-v2.schema.json",
  "schemaVersion": "2.0.0",
  "name": "codex-cli",
  "version": "1.0.0",
  "description": "OpenAI Codex CLI를 서브 에이전트로 호출하여 코드 생성/완성 수행",
  "author": {
    "name": "oh-my-claude-code",
    "url": "https://github.com/oh-my-claude-code"
  },
  "license": "MIT",
  "keywords": ["codex", "openai", "code-generation", "ai-agent"],
  "categories": ["ai-agent", "code-generation"],
  "engines": {
    "claude-code": ">=1.0.0"
  },
  "dependencies": {
    "claude-code": "^1.0.0"
  },
  "compatibility": {
    "platforms": ["darwin", "linux", "win32"],
    "minClaudeCodeVersion": "1.0.0"
  },
  "permissions": {
    "required": ["Bash", "Read", "Write"],
    "optional": ["WebSearch"]
  },
  "exports": {
    "commands": ["commands/*.md"],
    "skills": ["skills/*/SKILL.md"],
    "agents": ["agents/*.md"],
    "hooks": ["hooks/hooks.json"],
    "config": ["config/default.jsonc"]
  }
}
