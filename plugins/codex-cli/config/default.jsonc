{
  // ============================================================
  // Codex CLI Plugin Configuration
  // ============================================================
  // 참조: https://developers.openai.com/codex/config-reference/
  // CLI:  https://developers.openai.com/codex/cli/reference/
  // ============================================================

  "model": {
    // ----------------------------------------------------------
    // 모델 선택 (--model, -m)
    // ----------------------------------------------------------
    // 사용 가능한 값:
    //   - "gpt-5.2-codex"      : 최신 최상위 코딩 모델 (권장)
    //   - "gpt-5.1-codex-max"  : 장기 에이전틱 작업 최적화
    //   - "gpt-5.1-codex-mini" : 비용 효율적인 소형 모델
    //   - "gpt-5.1-codex"      : 이전 버전
    //   - "gpt-5.2"            : 범용 에이전틱 모델
    //   - "gpt-5.1"            : 범용 코딩/에이전틱
    //   - "gpt-5-codex"        : 레거시
    //   - "gpt-5-codex-mini"   : 레거시 소형
    //   - "latest"             : 최신 모델 자동 선택
    // ----------------------------------------------------------
    "name": "gpt-5.2-codex",

    // ----------------------------------------------------------
    // 추론 노력 수준 (model_reasoning_effort)
    // ----------------------------------------------------------
    // 사용 가능한 값:
    //   - "minimal" : 최소 추론 (가장 빠름)
    //   - "low"     : 낮은 추론
    //   - "medium"  : 중간 추론 (일반 작업 권장)
    //   - "high"    : 높은 추론
    //   - "xhigh"   : 최대 추론 (어려운 작업, 가장 오래 생각)
    // ----------------------------------------------------------
    // 참고: xhigh는 모델에 따라 지원 여부가 다름
    //       지연에 민감하지 않은 복잡한 작업에 적합
    // ----------------------------------------------------------
    "reasoningEffort": "xhigh"
  },

  "execution": {
    // ----------------------------------------------------------
    // 실행 모드
    // ----------------------------------------------------------
    // 사용 가능한 값:
    //   - "full-auto"                               : 자동 실행 (sandbox: workspace-write 포함)
    //   - "dangerously-bypass-approvals-and-sandbox": 모든 승인/샌드박스 우회 (매우 위험!)
    // ----------------------------------------------------------
    // 주의: dangerously-bypass-approvals-and-sandbox는
    //       외부에서 격리된 환경에서만 사용할 것
    // ----------------------------------------------------------
    "mode": "dangerously-bypass-approvals-and-sandbox",

    // ----------------------------------------------------------
    // 샌드박스 정책 (--sandbox, -s)
    // ----------------------------------------------------------
    // 사용 가능한 값:
    //   - "read-only"          : 읽기 전용 (가장 안전)
    //   - "workspace-write"    : 프로젝트 디렉토리만 쓰기 허용
    //   - "danger-full-access" : 무제한 파일시스템 접근 (위험!)
    // ----------------------------------------------------------
    "sandbox": "danger-full-access",

    // ----------------------------------------------------------
    // 승인 정책 (--ask-for-approval, -a)
    // ----------------------------------------------------------
    // 사용 가능한 값:
    //   - "untrusted"  : 모든 명령 실행 전 승인 요청 (가장 안전)
    //   - "on-failure" : 실행 실패 시에만 승인 요청
    //   - "on-request" : 모델이 필요하다고 판단할 때 요청
    //   - "never"      : 승인 없이 항상 실행 (위험!)
    // ----------------------------------------------------------
    "approval": "never"
  },

  // ============================================================
  // 추가 옵션 (선택적)
  // ============================================================

  "workspace": {
    // ----------------------------------------------------------
    // 추가 쓰기 가능 디렉토리 (--add-dir)
    // ----------------------------------------------------------
    // workspace-write 모드에서 추가로 쓰기 허용할 디렉토리
    // ----------------------------------------------------------
    "additionalDirs": []
  },

  "network": {
    // ----------------------------------------------------------
    // 네트워크 접근 허용 (sandbox_workspace_write.network_access)
    // ----------------------------------------------------------
    "enabled": true
  },

  "search": {
    // ----------------------------------------------------------
    // 웹 검색 활성화 (--search)
    // ----------------------------------------------------------
    "enabled": false
  }
}
