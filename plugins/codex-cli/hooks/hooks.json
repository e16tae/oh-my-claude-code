{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 -c \"import json,sys; d=json.load(sys.stdin); cmd=d.get('tool_input',{}).get('command',''); exit(0 if 'codex' in cmd else 1)\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[Codex] 호출 완료 - $(date)' >> ${CLAUDE_PLUGIN_ROOT}/logs/codex.log"
          }
        ]
      }
    ]
  }
}
