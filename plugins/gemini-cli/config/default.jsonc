{
  // ============================================================
  // Gemini CLI Plugin Configuration
  // ============================================================
  // 참조: https://ai.google.dev/gemini-api/docs/models
  // CLI:  gemini --help
  // ============================================================

  "model": {
    // ----------------------------------------------------------
    // 모델 선택 (--model, -m)
    // ----------------------------------------------------------
    // 사용 가능한 값:
    //
    // [Gemini 3 시리즈 - 최신]
    //   - "gemini-3-pro-preview"    : 최신 최상위 모델 (프리뷰, 권장)
    //   - "gemini-3-flash-preview"  : 최신 빠른 모델 (프리뷰)
    //
    // [Gemini 2.5 시리즈 - 안정]
    //   - "gemini-2.5-pro"          : 고급 추론 모델
    //   - "gemini-2.5-flash"        : 빠른 성능 + thinking 지원
    //   - "gemini-2.5-flash-lite"   : 저비용 고속 모델
    //
    // [Gemini 2.0 시리즈 - 레거시]
    //   - "gemini-2.0-flash"        : 이전 세대 빠른 모델
    //   - "gemini-2.0-flash-lite"   : 이전 세대 저비용 모델
    //
    // [특수 목적]
    //   - "gemini-2.5-flash-image"  : 이미지 생성
    //   - "gemini-2.5-flash-preview-tts" : 텍스트-음성 변환
    //   - "gemini-2.5-pro-preview-tts"   : 텍스트-음성 변환 (Pro)
    //
    // [별칭]
    //   - "latest"                  : 최신 모델 자동 선택
    // ----------------------------------------------------------
    "name": "gemini-3-pro-preview"
  },

  "execution": {
    // ----------------------------------------------------------
    // 승인 모드 (--approval-mode)
    // ----------------------------------------------------------
    // 사용 가능한 값:
    //   - "default"   : 모든 작업에 승인 요청 (가장 안전)
    //   - "auto_edit" : 편집 도구만 자동 승인
    //   - "yolo"      : 모든 도구 자동 승인 (위험!)
    // ----------------------------------------------------------
    // 참고: --yolo, -y 플래그는 "yolo" 모드와 동일
    // ----------------------------------------------------------
    "approvalMode": "yolo",

    // ----------------------------------------------------------
    // 샌드박스 모드 (--sandbox, -s)
    // ----------------------------------------------------------
    // 사용 가능한 값:
    //   - true  : 샌드박스 환경에서 실행 (안전)
    //   - false : 샌드박스 없이 실행
    // ----------------------------------------------------------
    "sandbox": false,

    // ----------------------------------------------------------
    // 디버그 모드 (--debug, -d)
    // ----------------------------------------------------------
    "debug": false
  },

  // ============================================================
  // 출력 옵션
  // ============================================================

  "output": {
    // ----------------------------------------------------------
    // 출력 형식 (--output-format, -o)
    // ----------------------------------------------------------
    // 사용 가능한 값:
    //   - "text"        : 일반 텍스트 출력
    //   - "json"        : JSON 형식 출력 (권장)
    //   - "stream-json" : 스트리밍 JSON 출력
    // ----------------------------------------------------------
    //
    // [분석 유형별 권장 출력 포맷]
    //
    // | 분석 유형     | 권장 포맷    | 이유                          |
    // |--------------|-------------|-------------------------------|
    // | 보안 분석     | json        | CVSS 점수, CWE 참조 구조화     |
    // | 성능 분석     | json        | 복잡도 수치, 병목 위치 정량화   |
    // | 아키텍처 분석 | json        | 모듈 관계, 의존성 그래프 표현   |
    // | 코드 리뷰     | json        | 이슈/수정사항 구조화 파싱       |
    // | 간단한 질문   | text        | 빠른 응답, 파싱 불필요          |
    //
    // [품질 최적화 팁]
    // - 코드 분석 시 json 포맷을 사용하면 구조화된 응답으로
    //   심각도, 위치, 수정코드 등을 정확히 파싱할 수 있습니다.
    // - 대용량 분석 시 stream-json으로 타임아웃을 방지합니다.
    // ----------------------------------------------------------
    "format": "json"
  },

  // ============================================================
  // 워크스페이스 옵션
  // ============================================================

  "workspace": {
    // ----------------------------------------------------------
    // 추가 디렉토리 포함 (--include-directories)
    // ----------------------------------------------------------
    // 워크스페이스에 추가로 포함할 디렉토리 목록
    // ----------------------------------------------------------
    "includeDirectories": []
  },

  // ============================================================
  // 도구 및 확장 옵션
  // ============================================================

  "tools": {
    // ----------------------------------------------------------
    // 자동 승인 도구 (--allowed-tools)
    // ----------------------------------------------------------
    // 확인 없이 실행 허용할 도구 목록
    // ----------------------------------------------------------
    "allowed": [],

    // ----------------------------------------------------------
    // 허용된 MCP 서버 (--allowed-mcp-server-names)
    // ----------------------------------------------------------
    "allowedMcpServers": []
  },

  "extensions": {
    // ----------------------------------------------------------
    // 사용할 확장 (--extensions, -e)
    // ----------------------------------------------------------
    // 빈 배열 = 모든 확장 사용
    // 특정 확장만 사용하려면 이름 지정
    // ----------------------------------------------------------
    "enabled": []
  },

  // ============================================================
  // 세션 옵션
  // ============================================================

  "session": {
    // ----------------------------------------------------------
    // 세션 재개 (--resume, -r)
    // ----------------------------------------------------------
    // 사용 가능한 값:
    //   - "latest" : 가장 최근 세션 재개
    //   - "1", "2" : 특정 인덱스 세션 재개
    //   - null     : 새 세션 시작
    // ----------------------------------------------------------
    "resume": null
  },

  // ============================================================
  // 접근성 옵션
  // ============================================================

  "accessibility": {
    // ----------------------------------------------------------
    // 스크린 리더 모드 (--screen-reader)
    // ----------------------------------------------------------
    "screenReader": false
  }
}
